{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		"customManagers:githubActionsVersions",
		"customManagers:makefileVersions"
	],
	"timezone": "America/Chicago",
	"schedule": [
		"before 4am on the first day of the month"
	],
	"packageRules": [
		{
			"groupName": "bun",
			"matchPackageNames": [
				"/oven-sh/bun/",
				"/oven/bun/"
			]
		},
		{
			"groupName": "pulumi",
			"matchDepNames": [
				"pulumi/pulumi$",
				"@pulumi/pulumi"
			]
		}
	],
	"customManagers": [
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/\\.pulumi\\.version/",
				"/\\.versions\\/pulumi/"
			],
			"matchStrings": [
				"(?<currentValue>\\S+)"
			],
			"depNameTemplate": "pulumi/pulumi",
			"datasourceTemplate": "github-tags",
			"extractVersionTemplate": "^v(?<version>.*)"
		},
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/\\.versions\\/kubernetes/",
				"/\\.versions\\/kubectl/"
			],
			"matchStrings": [
				"(?<currentValue>\\S+)"
			],
			"depNameTemplate": "kubernetes/kubernetes",
			"datasourceTemplate": "github-tags",
			"extractVersionTemplate": "^v(?<version>.*)"
		}
	]
}
