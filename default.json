{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		"customManagers:githubActionsVersions",
		"customManagers:makefileVersions",
		"schedule:monthly"
	],
	"timezone": "America/Chicago",
	"packageRules": [
		{
			"groupName": "bun",
			"matchPackageNames": [
				"/oven-sh/bun/",
				"/oven/bun/"
			]
		},
		{
			"groupName": "pulumi",
			"matchDepNames": [
				"pulumi/pulumi$",
				"@pulumi/pulumi"
			]
		}
	],
	"customManagers": [
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/\\.bun-version/",
				"/\\.versions\\/bun/"
			],
			"matchStrings": [
				"(?<currentValue>\\S+)"
			],
			"depNameTemplate": "oven-sh/bun",
			"datasourceTemplate": "github-releases",
			"extractVersionTemplate": "^bun-v(?<version>.*)"
		},
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/\\.pulumi\\.version/",
				"/\\.versions\\/pulumi/"
			],
			"matchStrings": [
				"(?<currentValue>\\S+)"
			],
			"depNameTemplate": "pulumi/pulumi",
			"datasourceTemplate": "github-tags",
			"extractVersionTemplate": "^v(?<version>.*)"
		},
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/\\.versions\\/kubernetes/",
				"/\\.versions\\/kubectl/"
			],
			"matchStrings": [
				"(?<currentValue>\\S+)"
			],
			"depNameTemplate": "kubernetes/kubernetes",
			"datasourceTemplate": "github-tags",
			"extractVersionTemplate": "^v(?<version>.*)"
		},
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/\\.versions\\/buf/"
			],
			"matchStrings": [
				"(?<currentValue>\\S+)"
			],
			"depNameTemplate": "bufbuild/buf",
			"datasourceTemplate": "github-tags",
			"extractVersionTemplate": "^v(?<version>.*)"
		},
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/\\.versions\\/dprint/"
			],
			"matchStrings": [
				"(?<currentValue>\\S+)"
			],
			"depNameTemplate": "dprint/dprint",
			"datasourceTemplate": "github-tags"
		}
	]
}
